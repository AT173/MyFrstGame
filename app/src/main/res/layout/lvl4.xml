<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121212">


  <TextView
      android:id="@+id/number22TextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/number22"
      android:textAppearance="@style/orangeText"
      android:textSize="40sp"
      app:layout_constraintBottom_toTopOf="@+id/mainOfCalcLvl4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/main_of_calc"
          android:id="@+id/mainOfCalcLvl4"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginTop="50dp" />

  <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:srcCompat="@drawable/screen_of_calc"
          android:id="@+id/screenOfCalcLvl4"
          app:layout_constraintStart_toStartOf="@+id/mainOfCalcLvl4"
          app:layout_constraintEnd_toEndOf="@+id/mainOfCalcLvl4"
          app:layout_constraintTop_toTopOf="@+id/mainOfCalcLvl4"
          app:layout_constraintBottom_toBottomOf="@+id/mainOfCalcLvl4"
          android:layout_marginBottom="300dp" />

  <TextView
          android:text="0"
          android:layout_width="207dp"
          android:layout_height="55dp"
          android:id="@+id/screenTextViewLvl4"
          app:layout_constraintStart_toStartOf="@+id/screenOfCalcLvl4"
          app:layout_constraintEnd_toEndOf="@+id/screenOfCalcLvl4"
          app:layout_constraintTop_toTopOf="@+id/screenOfCalcLvl4"
          app:layout_constraintBottom_toBottomOf="@+id/screenOfCalcLvl4"
          android:textSize="40sp"
          android:textColor="@color/white"
          android:textAlignment="textEnd" />

  <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          app:srcCompat="@drawable/orange_button"
          android:id="@+id/number6ButtonLvl4"
          app:layout_constraintTop_toBottomOf="@+id/screenOfCalcLvl4"
          android:layout_marginTop="40dp"
          app:layout_constraintStart_toStartOf="@+id/screenOfCalcLvl4"
          app:layout_constraintEnd_toEndOf="@+id/screenOfCalcLvl4"
          android:layout_marginEnd="90dp" />

  <TextView
          android:text="@string/number6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/number6TextViewLvl4"
          app:layout_constraintEnd_toEndOf="@+id/number6ButtonLvl4"
          app:layout_constraintStart_toStartOf="@+id/number6ButtonLvl4"
          app:layout_constraintTop_toTopOf="@+id/number6ButtonLvl4"
          app:layout_constraintBottom_toBottomOf="@+id/number6ButtonLvl4"
          android:textSize="30sp"
          android:textColor="@color/white" />

  <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          app:srcCompat="@drawable/orange_button"
          android:id="@+id/number5ButtonLvl4"
          app:layout_constraintEnd_toEndOf="@+id/screenOfCalcLvl4"
          app:layout_constraintStart_toEndOf="@+id/number6ButtonLvl4"
          app:layout_constraintTop_toBottomOf="@+id/screenOfCalcLvl4"
          android:layout_marginTop="40dp" />

  <TextView
          android:text="@string/number5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/number5TextViewLvl4"
          app:layout_constraintEnd_toEndOf="@+id/number5ButtonLvl4"
          app:layout_constraintStart_toStartOf="@+id/number5ButtonLvl4"
          app:layout_constraintTop_toTopOf="@+id/number5ButtonLvl4"
          app:layout_constraintBottom_toBottomOf="@+id/number5ButtonLvl4"
          android:textSize="30sp"
          android:textColor="@color/white" />

  <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          app:srcCompat="@drawable/orange_button"
          android:id="@+id/number9ButtonLvl4"
          app:layout_constraintTop_toBottomOf="@+id/number6ButtonLvl4"
          android:layout_marginTop="40dp"
          app:layout_constraintStart_toStartOf="@+id/number6ButtonLvl4" />

  <TextView
          android:text="@string/number9"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/number9TextViewLvl4"
          app:layout_constraintEnd_toEndOf="@+id/number9ButtonLvl4"
          app:layout_constraintStart_toStartOf="@+id/number9ButtonLvl4"
          app:layout_constraintTop_toTopOf="@+id/number9ButtonLvl4"
          app:layout_constraintBottom_toBottomOf="@+id/number9ButtonLvl4"
          android:textSize="30sp"
          android:textColor="@color/white" />

  <ImageView
          android:layout_width="50dp"
          android:layout_height="50dp"
          app:srcCompat="@drawable/orange_button"
          android:id="@+id/number7ButtonLvl4"
          app:layout_constraintEnd_toEndOf="@+id/number5ButtonLvl4"
          app:layout_constraintTop_toBottomOf="@+id/number5ButtonLvl4"
          android:layout_marginTop="40dp" />

  <TextView
          android:text="@string/number7"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/number7TextViewLvl4"
          android:textColor="@color/white"
          app:layout_constraintEnd_toEndOf="@+id/number7ButtonLvl4"
          app:layout_constraintStart_toStartOf="@+id/number7ButtonLvl4"
          app:layout_constraintBottom_toBottomOf="@+id/number7ButtonLvl4"
          app:layout_constraintTop_toTopOf="@+id/number7ButtonLvl4"
          android:textSize="30sp" />

  <ImageView
          android:layout_width="100dp"
          android:layout_height="50dp"
          app:srcCompat="@drawable/orange_button"
          android:id="@+id/checkButtonLvl4"
          app:layout_constraintBottom_toBottomOf="@+id/mainOfCalcLvl4"
          app:layout_constraintStart_toStartOf="@+id/mainOfCalcLvl4"
          app:layout_constraintEnd_toEndOf="@+id/mainOfCalcLvl4"
          android:layout_marginBottom="40dp" />

  <TextView
          android:text="@string/equals"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/checkButtonTextViewLvl4"
          android:textSize="40sp"
          android:textColor="@color/white"
          app:layout_constraintEnd_toEndOf="@+id/checkButtonLvl4"
          app:layout_constraintStart_toStartOf="@+id/checkButtonLvl4"
          app:layout_constraintTop_toTopOf="@+id/checkButtonLvl4"
          app:layout_constraintBottom_toBottomOf="@+id/checkButtonLvl4" />

  <ImageView
      android:id="@+id/backButtonLvl4"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_marginStart="15dp"
      android:layout_marginTop="15dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/red_button" />

  <TextView
      android:id="@+id/backButtonTextViewLvl4"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:text="x"
      android:textAlignment="center"
      android:textSize="40sp"
      app:layout_constraintBottom_toBottomOf="@+id/backButtonLvl4"
      app:layout_constraintEnd_toEndOf="@+id/backButtonLvl4"
      app:layout_constraintStart_toStartOf="@+id/backButtonLvl4"
      app:layout_constraintTop_toTopOf="@+id/backButtonLvl4"
      app:layout_constraintVertical_bias="0.24" />

  <Chronometer
      android:id="@+id/chronometerLvl4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/orangeText"
      android:textSize="40sp"
      android:format="%2:%02d"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/mainOfCalcLvl4" />

</androidx.constraintlayout.widget.ConstraintLayout>